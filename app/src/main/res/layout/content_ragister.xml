<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ragister_user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_user" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_user" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                android:id="@+id/register_username"
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="User Name"
                android:inputType="textPersonName" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_mobile" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                android:id="@+id/register_phone"
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="mobile"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_email" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                android:id="@+id/ragister_email_id"
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Email ID"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_lock" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                android:id="@+id/ragister_password"
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="password"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/ragister_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/app_button_color"
            android:text="register with us"
            android:textColor="@drawable/white_secondry_color" />


    </LinearLayout>
</RelativeLayout>