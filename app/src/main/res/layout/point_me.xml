<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/point_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_taged" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                android:id="@+id/signup_email"
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Pointed users"
                android:inputType="textEmailAddress" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_map" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                android:id="@+id/signup_phone"
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Location or type"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_text" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                android:id="@+id/signup_email_id"
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Pointed Text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_camera_image" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Ponted Images"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_video" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <EditText
                android:id="@+id/signup_password"
                style="@style/InputTextForUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Pointed Video"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/signup_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/app_button_color"
            android:text="point"
            android:textColor="@drawable/white_secondry_color" />


    </LinearLayout>
</RelativeLayout>